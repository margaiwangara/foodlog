<!DOCTYPE html>
<html>
  <head>
    <title>Foodlog | <% if content_for(:title) %> <%= yield :title %> <% else %> Log your food and stay healthy <% end %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%# render partial %>
    <%= render "shared/header" %>

    <% if notice.present? %>
      <div class="notification is-link is-light"><%= notice %></div>
    <% end %>

    <% if alert.present? %>
      <p class="notification is-danger is-light"><%= alert %></p>
    <% end %>
    <div class="container">

      <%= yield %>
    </div>
  </body>
</html>
